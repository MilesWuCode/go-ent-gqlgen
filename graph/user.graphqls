extend type Mutation {
  createUser(input: CreateUserInput!): User!
  updateUser(id: ID!, input: UpdateUserInput!): User!
}

extend type Query {
  user(id: ID!): User!
}

extend type User {
  firstLetter: String!
  # 自製分頁
  todoPages(
    after: Cursor
    first: Int
    before: Cursor
    last: Int
    orderBy: TodoOrder
  ): TodoConnection!
}
